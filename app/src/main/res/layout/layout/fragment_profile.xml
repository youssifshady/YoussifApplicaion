    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_ofpoet"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/thebest" />

        <TextView
            android:id="@+id/poetname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_ofpoet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="@string/Name_of_shady1"
            android:textColor="@android:color/black"
            android:textSize="27dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poetgmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poetname"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/user"
            android:text="    shadyelzaher@gmail.com    "
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poetnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poetgmail"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/phone_icon_24dp"
            android:text="    01000670111    "
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/poetintroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poetnumber"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/arabicfont3"
            android:text="بسم الله الرحمن الرحيم الحمد لله والصلاة والسلام على رسول الله محمد وعلى آله وصحبه و التابعين بإحسان إلي يوم الدين ."
            android:textColor="@android:color/background_dark"
            android:textIsSelectable="true"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poet_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poetintroduction"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/arabicfont3"
            android:text="أما بعد فهذه باقة من أعمالي الشعرية أنهيت بعضها و مازال الكثير في طور التعديل والحذف والإضافة والمراجعة وأشرف بتركه بين أيديكم متمنياً أن ينال إعجابكم ."
            android:textColor="@android:color/background_dark"
            android:textIsSelectable="true"
            android:textSize="23dp"
            android:textStyle="bold" />


    </RelativeLayout>

</ScrollView>


