<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color2"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".activity.DrawbleMainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/imageofpoetdrawable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/nav_header_desc"
        android:src="@drawable/thebest" />

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/poetname"
        android:layout_below="@id/imageofpoetdrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Shady Elzaher"
        android:textColor="@android:color/white" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/poetname"
        android:textIsSelectable="true"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shadyelzaher@gmail.com" />

</RelativeLayout>
